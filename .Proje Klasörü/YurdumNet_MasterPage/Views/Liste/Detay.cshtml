                    <div class="tab-pane fade col-lg-12" id="nav-yorumekle" role="tabpanel" aria-labelledby="nav-contact-tab">
                        <div class="container-contact100" style="background-color:gray">

                            <div class="wrap-contact100" style="width:100%">
                                <div class="contact100-form-title" style="background-image: url(/Content/yorumekle/bg-01.jpg);">
                                    <span class="contact100-form-title-1">
                                        Deneyimlerinizi Paylaşın
                                    </span>

                                    <span class="contact100-form-title-2">
                                        Kaldığınız yurttaki tecrübelerinizi paylaşarak yeni öğrencilere fikir sağlayabilirsiniz!
                                    </span>
                                </div>

                                <form class="contact100-form validate-form" action="/Liste/Gonder" method="post">
                                    <div class="wrap-input100 validate-input" data-validate="İsim gerekli">
                                        <span class="label-input100">Ad:</span>
                                        <input class="input100" type="text" name="name" placeholder="Adınızı giriniz">
                                        <span class="focus-input100"></span>
                                    </div>


                                    <div class="wrap-input100 validate-input" data-validate="Soyisim gerekli">
                                        <span class="label-input100">Soyad:</span>
                                        <input class="input100" type="text" name="surname" placeholder="Soyadınızı giriniz">
                                        <span class="focus-input100"></span>
                                    </div>



                                    <div class="wrap-input100 validate-input" data-validate="Geçerli bir e-posta gerekli: ex@abc.xyz">
                                        <span class="label-input100">E-mail:</span>
                                        <input class="input100" type="text" name="email" placeholder="E-mail adresinizi giriniz">
                                        <span class="focus-input100"></span>
                                    </div>



                                    <input type="hidden" name="yurtid" value="@Model.YurtID" />




                                    <div class="wrap-input100">
                                        <span class="label-input100">Yurt:</span>
                                        <label style="padding-top:13px;padding-bottom:6px;text-align:left" class="input100">@Model.YurtAdi</label>
                                        <span class="focus-input100"></span>
                                    </div>


                                    <div class="wrap-input100 validate-input" data-validate="Degerlenirme gerekli">
                                        <span class="label-input100">Degerlendirme:</span>











                                        <fieldset class="rating">
                                            <input type="radio" id="star5" name="rating" value="5" /><label class="full" for="star5" title="Muhteşem - 5 Yıldız"></label>


                                            <input type="radio" id="star4" name="rating" value="4" /><label class="full" for="star4" title="İyi - 4 Yıldız"></label>


                                            <input type="radio" id="star3" name="rating" value="3" /><label class="full" for="star3" title="Yeterli - 3 Yıldız"></label>


                                            <input type="radio" id="star2" name="rating" value="2" /><label class="full" for="star2" title="Kötü - 2 Yıldız"></label>


                                            <input type="radio" id="star1" name="rating" value="1" /><label class="full" for="star1" title="Berbat - 1 Yıldız"></label>

                                        </fieldset>
                                        <span class="focus-input100"></span>
                                    </div>




                                    <div class="wrap-input100 validate-input" data-validate="Yorum gerekli">
                                        <span class="label-input100">Yorum:</span>
                                        <textarea class="input100" name="message" placeholder="Yorumunuz..."></textarea>
                                        <span class="focus-input100"></span>
                                    </div>

                                    <div class="container-contact100-form-btn">
                                        <button class="contact100-form-btn">
                                            <span>
                                                Gönder
                                                <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                                            </span>
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>

                    </div>

                </div>
