                    @*--------------------------------------------------------------------------------------------------------------------------------------------*@


                    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                        <div class="mapouter">

                            <div style="margin-left:9%" class="gmap_canvas"><iframe width="1080" height="530" id="gmap_canvas" src="@Model.Konum" frameborder="0" scrolling="no"></iframe>@*<a href="https://www.bitgeeks.net/embed-google-map/">embed multiple location google map in html</a>*@</div>

                        </div>

                    </div>


                    @*--------------------------------------------------------------------------------------------------------------------------------------------*@


                    <div class="tab-pane fade col-lg-12" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
                        <div class="site-section bg-white">
                            <div class="container">

                                <div class="slide-one-item home-slider owl-carousel">

                                    @foreach (Degerlendirmeler item in Model.Degerlendirmeler)
                                    {
                                        <div>

                                            <div class="testimonial">
                                                <figure class="mb-4">

                                                    <h4 class="yazitipi">@item.Adi&nbsp;@item.Soyadi</h4>
                                                    @{int m = item.Rating * 20;}
                                                    <div class="star-ratings-sprite"><span style="width:@m%" class="star-ratings-sprite-rating"></span></div>
                                                    <br />
                                                    <br />

                                                </figure>
                                                <blockquote>
                                                    <p class="yazitipi">&ldquo;@item.Yorum&rdquo;</p>
                                                </blockquote>
                                                <br />
                                                <br />
                                                <h5>@String.Format("{0:M MMMM yyyy}", item.Tarih)</h5>
