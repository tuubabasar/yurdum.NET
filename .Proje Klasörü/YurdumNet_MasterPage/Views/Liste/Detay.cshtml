<div style="margin-top:150px">
    <div style="width:100%">
        <div class="col-lg-7" style="float:left">

            <div class="mb-4">
                <div class="slide-one-item home-slider owl-carousel" style="border-radius:10px">
                    @foreach (YurtFotograflari item in Model.YurtFotograflari)
                    {
                        <div style="height:450px"><img src="@item.FotoYolu.Substring(1)" alt="Image" class="img-fluid"></div>
                    }


                </div>
            </div>

        </div>
        <div class="col-lg-5" style="height:560px;float:left">
            @*<div style="margin-top:30px">
                    <h5 style="text-align:center"><b>@Model.YurtAdi</b></h5>
                </div>*@



            @{
                List<int> puan = new List<int>();
                int k = 0;

                foreach (Degerlendirmeler item in Model.Degerlendirmeler)
                {
                    puan.Add(item.Rating);
                    k++;
                }

                decimal i = (Decimal.Round((decimal)puan.Average(), 1)) * 20;
                i = (int)i;

                <div class="sidebar_info" style="margin-top:20px;margin-bottom:40px">

                    <h5 class="yazitipi" style="text-align:center;margin-bottom:30px"><b>@Model.YurtAdi</b></h5>


                    <div style="float:left;margin-left:37%" class="star-ratings-sprite"><span style="width:@i%" class="star-ratings-sprite-rating"></span></div>
                    <div style="float:left">&nbsp;&nbsp;(@k)</div>

                </div>
            }


            <div class="sidebar_info" style="margin-top:70px">
                <ul>
                    <li class="d-flex flex-row align-items-start justify-content-start">
                        <div class="sidebar_info_icon"><img src="/Content/icon/info_1.png" alt=""></div>
                        <div class="sidebar_info_content"><span>Address: </span>@Model.Adres</div>
                    </li>
                    <li class="d-flex flex-row align-items-start justify-content-start">
                        <div class="sidebar_info_icon"><img src="~/Content/icon/info_2.png" alt=""></div>
                        <div class="sidebar_info_content"><span>Phone: </span>@Model.Telefon</div>
                    </li>
                    <li class="d-flex flex-row align-items-start justify-content-start">
                        <div class="sidebar_info_icon"><img src="~/Content/icon/info_3.png" alt=""></div>
                        <div class="sidebar_info_content"><span>E-mail: </span>@Model.YurtSahipleri.SahipMail</div>
                    </li>
                </ul>
            </div>

        </div>
    </div>



